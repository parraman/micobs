//		real /* name */ := /* default */ range /* ( / [ */ /* min */ , /* max */ /* ) / ] */;
//		string /* name */ := /* default */;
//		enum /* name */ {
//			LITERAL_A, ...
//		};
//		enum /* definition */ /* name */ := /* default literal */;  
// 	};

};
«ENDFILE»
«ENDDEFINE»
